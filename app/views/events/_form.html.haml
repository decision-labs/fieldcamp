= form_for [@project, @event] do |f|
  -if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .field.group
    = f.label :title, :class => 'label'
    = f.text_field :title, :class => 'text_field'
  .field.group
    = f.label :description, :class => 'label'
    = f.text_area :description, :class => 'text_area'
  .field.group
    = f.hidden_field :geom, :class => 'hidden_field'
  .field.group
    = f.label :address, :class => 'label'
    = f.text_field :address, :class => 'text_field'
    %span.geocode_link=link_to t(:geocode_this_address), nil, :class => 'geocode_address'
    %span.geocoding_status Address unverified
  .group.navform.wat-cf
    = f.submit t(:save), :class => 'button'
