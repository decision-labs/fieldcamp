:javascript
  $(document).ready(function() {
    var lat,
    lon,
    elev = 0;
    var map = null;
    var marker = null;
    var pathname = "#{url_for(:action => controller.action_name)}"

    var center = new google.maps.LatLng("#{@location.geom.envelope.center.y}", "#{@location.geom.envelope.center.x}");
    var sw = new google.maps.LatLng("#{@location.geom.envelope.lower_corner.y}", "#{@location.geom.envelope.lower_corner.x}");
    var ne = new google.maps.LatLng("#{@location.geom.envelope.upper_corner.y}", "#{@location.geom.envelope.upper_corner.x}");
    var mapBounds = new google.maps.LatLngBounds(sw, ne); // LatLngBounds(sw?:LatLng, ne?:LatLng)
    var mapOptions = {
      zoom: 8,
      center: center,
      mapTypeId: google.maps.MapTypeId.ROADMAP
    };
    map = new google.maps.Map($('#map_canvas')[0], mapOptions);
    map.fitBounds(mapBounds);
    $.getJSON(pathname+'.json', function(geojson) {
      province = new GeoJSON(geojson, null);
      province.setMap(map);
      // TODO: set the zoom level based on the extent of the province
    });

  })