/ Locations

#header{'data-role' => 'header'}
  %h1= t(:locations)
  - if user_signed_in?
    = link_to(t(:logout), destroy_user_session_path, :class => 'ui-btn-right', :rel => 'external')
  - else
    = link_to(t(:login), new_user_session_path, :class => 'ui-btn-right', 'data-rel' => 'dialog', 'data-transition' => 'pop')
  /=link_to t(:new), new_location_path, 'data-icon' => 'plus', :class => 'ui-btn-right'

#content{'data-role' => 'content'}
  %ul{'data-role' => 'listview'}
    - @locations.each do |location|
      %li
        = link_to location.name, location
        /= link_to t(:edit), edit_location_path(location), 'data-icon' => 'gear'

= render 'shared/footer'
